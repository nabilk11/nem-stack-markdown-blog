<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>nk nem stack blog</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
    </head>
    <body>
        <%- include('../partials/_navbar') %>
        <div class="container">
            <div class="page-header">
                <h1 class="mb-5 header">The Nem Stack Blog <br><small class="text-muted">A Markdown Blog</small> </h1>
            </div>
            <h3 class="mb-4 header">Blog Articles</h3>
            <a href="/articles/new" class="btn btn-success">Add New Article</a>

            <% articles.forEach(article => { %>
                <div class="card mt-4">
                    <div class="card-img-top"><img src="" alt=""></div>
                    <div class="card-body border">
                        <h4 class="card-title"><%= article.title %></h4>
                        <div class="card-subtitle text-muted mb-2">
                            <%= article.dateCreated.toLocaleDateString() %>
                        </div>
                        <div class="card-text mb-2">
                            <%= article.description %>  
                        </div>
                        <a href="articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
                        <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                            <button class="btn btn-danger" type="submit">Delete</button>
                        </form>
                    </div>
                   
                    
                </div>

           <% }) %>
        </div>

    </body>
</html>