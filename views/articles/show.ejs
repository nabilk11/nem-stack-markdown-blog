<%- include('../partials/_header') %>   
       
            <h2 class="mb-2 header"><%= article.title %></h2>
            <div class="text-muted mb-4"><%= article.dateCreated.toLocaleDateString() %></div>
            <a href="/" class="btn btn-secondary">All Articles</a>
            <a href="/articles/edit/<%=article.id%>" class="btn btn-info">Edit</a>
            <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                <button class="btn btn-danger" type="submit">Delete</button>
            </form>
            <div class="">
                <p class="small mt-4">Description:</p>
                <%= article.description %>
            </div>
            <div class="mt-4">
                <%- article.sanitizedHtml %>
            </div>
        </div>

    </body>
</html>